
public class Coustomer {
	private int ID;
	private String fName;
	private int age;
	private char gender;
	private boolean helmet;
	private boolean lock;
	private ElectricScooter scooter;
	
	public Coustomer(int ID, String fName, int age, char gender,boolean helmet, boolean lock, ElectricScooter scooter) throws InvalidEmployeeInputException 
	{
		if (isValidGender(gender)){
			this.ID = ID;
			this.fName = fName;
			this.age = age;
			this.gender = gender;
			this.helmet=helmet;
			this.lock=lock;
			this.scooter=scooter;
		}
		else
			throw new InvalidEmployeeInputException("Gender must be m/w/o.");
	}
	
	private boolean isValidGender(char c) {
		return c == 'm' || c == 'f' || c == 'u';
	}

	
}
